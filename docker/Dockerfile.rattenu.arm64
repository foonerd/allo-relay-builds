FROM arm64v8/debian:bookworm

ENV DEBIAN_FRONTEND=noninteractive

RUN apt-get update && apt-get install -y \
    build-essential \
    gcc \
    make \
    pkg-config \
    liblircclient-dev \
    && rm -rf /var/lib/apt/lists/*

# lgpio library will be installed at runtime via mounted DEBs

WORKDIR /build
